<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<StatDef>
		<defName>SOS2HS_MaxHeatOutputPerSecond</defName>
		<label>max heat output per second</label>
		<workerClass>SOS2HS.StatWorker_MaxHeatOutputPerSecond</workerClass>
		<description>The maximum amount of degrees this building can vent in a room per second.\n\nTake care to add enough radiators to avoid seeing your ventilation system bursting into flames.</description>
		<category>SOS2HS_HeatStatistics</category>
		<defaultBaseValue>1</defaultBaseValue>
		<minValue>0</minValue>
		<toStringStyle>FloatTwo</toStringStyle>
		<displayPriorityInCategory>3</displayPriorityInCategory>
		<showIfUndefined>false</showIfUndefined>
		<showIfModsLoaded>
			<li>kentington.saveourship2</li>
			<li>helldragger.sos2heatsinkstatistics</li>
		</showIfModsLoaded>
	</StatDef>
	<StatDef>
		<defName>SOS2HS_CurrentCoolingPerSecond</defName>
		<label>Current cooling per second</label>
		<workerClass>SOS2HS.StatWorker_CurrentCoolingPerSecond</workerClass>
		<description>The amount of degrees this building is removing from the room on its cold side per second.</description>
		<category>SOS2HS_HeatStatistics</category>
		<defaultBaseValue>0</defaultBaseValue>
		<toStringStyle>FloatThree</toStringStyle>
		<displayPriorityInCategory>3</displayPriorityInCategory>
		<showIfUndefined>false</showIfUndefined>
		<showIfModsLoaded>
			<li>kentington.saveourship2</li>
			<li>helldragger.sos2heatsinkstatistics</li>
		</showIfModsLoaded>
	</StatDef>
	<StatDef>
		<defName>SOS2HS_MaxCoolingPerSecond</defName>
		<label>Max cooling per second</label>
		<workerClass>SOS2HS.StatWorker_MaxCoolingPerSecond</workerClass>
		<description>The maximum amount of degrees this building can remove from the room on its cold side per second.</description>
		<category>SOS2HS_HeatStatistics</category>
		<defaultBaseValue>0</defaultBaseValue>
		<toStringStyle>FloatThree</toStringStyle>
		<displayPriorityInCategory>3</displayPriorityInCategory>
		<showIfUndefined>false</showIfUndefined>
		<showIfModsLoaded>
			<li>kentington.saveourship2</li>
			<li>helldragger.sos2heatsinkstatistics</li>
		</showIfModsLoaded>
	</StatDef>
</Defs>